<div class="row">
    {{#each goodsList}}
        <div class="col-6 pe-0">
            <div class="card my-1">               
                <img class="card-img-top" src="{{img}}">
                <div class="card-body">
                    {{#if isHot}}
                        <span class="badge rounded-pill text-bg-warning m-1">HOT!</span>
                    {{/if}}
                    {{#if isNew}}
                        <span class="badge rounded-pill text-bg-primary m-1">New</span>
                    {{/if}}
                    {{#if isFast}}
                        <div class="btn btn-sm btn-success m-1">Швидка доставка</div>
                    {{/if}}
                    {{#if isFree}}
                        <div class="btn btn-sm btn-secondary m-1">Безкоштовна доставка</div>
                    {{/if}}
                    <h5>{{name}}</h5>
                    <div class="mb-2">{{review.amount}}{{review.text}}</div>
                    <h4>{{price}}</h4>
                    <div class="mb-2">{{delivery}}</div>
                    {{#each buttons}}
                        {{#if isPrimary}}
                            <a href="{{link}}" target="_blank" class="mb-1 btn btn-sm btn-primary">{{text}}</a>
                        {{else isSecondary}}
                            <a href="{{link}}" target="_blank" class="btn btn-sm btn-secondary">{{text}}</a>
                        {{/if}}
                    {{/each}}
                    <ul class="mt-3 mb-0">
                        {{#each characteristics}}
                            <li>{{this.title}}:{{this.value}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    {{/each}}
</div>