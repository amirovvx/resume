<div class="card m-3">
    <div class="card-body p-3">
        <div class="row">
            <div class="col-2">
                <img  src="{{image}}">
            </div>
            <div class="col-4">
                <h5 class="ms-3">{{name}}</h5>
                <div class="ms-3">{{description}}</div>
            </div>
            <div class="col-2">
                <div class="my-3">{{price.title}}</div>
                <b>{{price.value}}</b>
            </div>
            <div class="col-1">
                <div class="my-4">{{amount}}</div>
            </div>        
            <div class="col-3">
                {{#each buttons}}
                    {{#if isPrimary}}
                        <button class="my-3 btn btn-primary">{{text}}</button>
                    {{else isDanger}}
                        <button class="btn btn-outline-danger">{{text}}</button>
                    {{/if}}
                {{/each}}
            </div>                       
        </div>
    </div>
</div>