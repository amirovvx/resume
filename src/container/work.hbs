{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	{{#with main}}
	<main>
		<section>
			{{> title data="Work history" big=true}}
			<div>
				<ul>
					{{#each works}}
					<li>
						<div>{{position}}</div>
						<br>
						<div>{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(до сих пор работаю)
							{{/if}}
						</div>
						<br>
						<b>{{company.name}}</b>
					</li>
					<br>
					<br>
					<div>
						<strong>Projects ({{projectAmount}})</strong>
					</div>
					<br>
					<ul>
						{{#each projects}}
						<li>
							<div>{{> link text=name href=url blank=true noLine=true}}</div>
							<br>
							<div>{{about}}</div>
							<br>
							<ul>
								<div><em>Project stacks ({{stackAmount}})</em></div>
								<br>
								{{#each stacks}}
								<li>
									<div>{{name}}</div>
								</li>
								{{/each}}
								<br>
								<div><em>Project awards ({{stackAwards}})</em></div>
								<br>
								{{#each awards}}
								<li>
									<div>{{name}}</div>
								</li>
								{{/each}}
							</ul>
						</li>
						{{/each}}
					</ul>
					{{/each}}
				</ul>
			</div>
		</section>
	</main>
	{{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}