<header>
    {{#with page_header}}
        <h1 class="text-center">{{title}}</h1>
        <p class="text-center">"{{description}}"</p>
    {{/with}}
</header>
<main>
    <section>       
        {{#with section}}
        <div class="card">
            <div class="card-body">
                {{#with about_us}}
                    <div class="display-6 text-end">{{title_list.main}}</div>
                    <h2 class="text-end">"{{title_list.sub}}"</h2>
                    <br>
                    <button class="btn btn-outline-info">{{button.text}}</button>
                {{/with}}
            </div>
        </div>
            <br>
            <div class="card">
                <div class="card-body">
                    {{#with advantage}}
                        <div class="display-5 text-muted">{{title}}</div>
                        <br>
                        <div class="card">
                            {{#with efficiency}}
                                <div class="card-body">
                                    <div class="display-4 text-muted">{{title}}</div>
                                    <br>
                                    <h6>{{sub_title}}</h6>
                                    <br>
                                    <p>"{{description}}"</p>
                                    <br>
                                    <button class="btn btn-warning">{{button}}</button>
                                </div>
                            {{/with}}
                        </div>
                        <br>
                        <div class="card">
                            {{#with innovation}}
                                <div class="card-body">
                                    <div class="display-4 text-muted text-center">{{title}}</div>
                                    <br>
                                    <h6 class="text-center">{{sub_title}}</h6>
                                    <br>
                                    <p class="text-center">"{{description}}"</p>
                                    <br>
                                    <button class="btn btn-warning">{{button}}</button>
                                </div>
                            {{/with}}
                        </div>
                        <br>
                        <div class="card">
                            {{#with collaboration}}
                                <div class="card-body">
                                    <div class="display-4 text-muted text-end">{{title}}</div>
                                    <br>
                                    <h6 class="text-end">{{sub_title}}</h6>
                                    <br>
                                    <p class="text-end">"{{description}}"</p>
                                    <br>
                                    <button class="btn btn-warning">{{button}}</button>
                                </div>
                            {{/with}}
                        </div>
                    {{/with}}
                </div>
            </div>
            <br>
            <div class="card">
                {{#with agreement}}
                    <div class="card-body">
                        <div class="display-5">{{title}}</div>
                        <br>
                        <div class="card">
                            {{#with info}}
                                <div class="card-body">
                                    <h5>{{sub_title}}</h5>
                                    <br>
                                    <div class="card">
                                        <div class="card-body">
                                            <p>"{{detail.text}}"</p>
                                            <br>
                                            <button class="btn btn-success">{{detail.button}}</button>
                                        </div>
                                    </div>
                                </div>
                            {{/with}}
                        </div>
                    </div>
                {{/with}}
            </div>
        {{/with}}
    </section>
</main>